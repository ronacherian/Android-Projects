<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listNameTextView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/listMobileTextView"
        android:layout_marginTop="25dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/listMobileTextView"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/listNameTextView"
        android:layout_marginStart="31dp"
        android:layout_toEndOf="@+id/contactProfImageView"
        android:text="TextView" />

    <ImageView
        android:id="@+id/contactProfImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/default_image" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.roncherian.inclass10.SelectAvatarActivity">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/SelectAvatar"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="11dp" />

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginTop="43dp"
    android:layout_below="@+id/textView"
    android:layout_centerHorizontal="true"
    android:id="@+id/linearLayout">

    <ImageView
        android:id="@+id/Avatar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_f_1" />

    <ImageView
        android:id="@+id/Avatar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_m_3" />

</LinearLayout>

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_below="@+id/linearLayout"
    android:layout_alignLeft="@+id/linearLayout"
    android:layout_alignStart="@+id/linearLayout"

    android:layout_marginTop="13dp"
    android:id="@+id/linearLayout2">

    <ImageView
        android:id="@+id/Avatar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_f_2" />

    <ImageView
        android:id="@+id/Avatar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_m_2" />

</LinearLayout>

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_below="@+id/linearLayout2"
    android:layout_alignLeft="@+id/linearLayout2"
    android:layout_alignStart="@+id/linearLayout2"
    android:layout_marginTop="18dp">

    <ImageView
        android:id="@+id/Avatar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_f_3" />

    <ImageView
        android:id="@+id/Avatar6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@drawable/avatar_m_1" />

</LinearLayout>
</RelativeLayout>
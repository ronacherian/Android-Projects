<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.arun.inclass09group20.MessageThreads">


        <TextView
            android:id="@+id/textViewLoggedInUserName"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Bob Marley"
            android:textSize="20sp"
            android:textStyle="bold"

            />

        <ImageButton
            android:id="@+id/imageButtonExit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logout"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:text="Current Threads"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/threadsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/editTextThreadName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="16dp"
        android:gravity="left|center"
        android:hint="Add New Thread"
        android:inputType="textPersonName"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/imageButtonAddThread" />

    <ImageButton
        android:id="@+id/imageButtonAddThread"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/editTextThreadName"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/add" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignBottom="@+id/imageButtonExit"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/black" />
</RelativeLayout>


